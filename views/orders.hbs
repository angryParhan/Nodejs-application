<h1>My Orders</h1>

{{#if orders.length}}
  {{#each orders}}
    <div class="row">
      <div class="col  s6 offset-s3">
        <div class="card">
          <div class="card-content">
            <span class="card-title">
              Order: <smal>{{_id}}</smal>
            </span>
            <p>Date: <span class="date">{{date}}</span></p>
            <p>User: <em>{{user.userId.name}}</em> ({{user.userId.email}})</p>
            <ol>
              {{#each courses}}
                <li>{{course.title}} (x <strong>{{count}}</strong>)</li>
              {{/each}}
            </ol>
            <hr>
            <p>Price: {{price}}$</p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>Orders is empty</p>
{{/if}}
