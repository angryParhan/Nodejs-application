<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="post" class="course-form">
  <div class="input-field">
    <input id="title" type="text" name="title" class="validate" required value="{{course.title}}">
    <label for="title">Course name</label>
    <span class="helper-text" data-error="Enter course name"></span>
  </div>

  <div class="input-field">
    <input id="price" type="number" name="price" class="validate" required min="1"  value="{{course.price}}">
    <label for="price">Course price</label>
    <span class="helper-text" data-error="Enter price"></span>
  </div>

  <div class="input-field">
    <input id="image" type="text" name="img" class="validate" required  value="{{course.img}}">
    <label for="image">URL image</label>
    <span class="helper-text" data-error="URL is required"></span>
  </div>
  <input type="hidden" name="id" value="{{course.id}}">
  <input type="hidden" name="_csrf" value="{{crf}}">
  <button class="btn waves-effect waves-light" type="submit">Edit course</button>
</form>


<form action="/courses/remove" method="post">
  <input type="hidden" name="id" value="{{course.id}}">
  <input type="hidden" name="_csrf" value="{{crf}}">
  <button class="btn red">Delete course</button>
</form>

